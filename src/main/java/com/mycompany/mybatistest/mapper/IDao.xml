<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.mycompany.mybatistest.dao.IDao">
	
	<select id="boardlistDao" resultType="com.mycompany.mybatistest.dto.BoardDto">
		SELECT * FROM boardtbl ORDER BY bnum DESC
	</select>
	
	<insert id="boardWriteDao" >
		<!-- INSERT INTO boardtbl (btitle, bcontent, bname) VALUES (#{param1 }, #{param2 }, #{param3 }) -->
		INSERT INTO boardtbl (btitle, bcontent, bname) VALUES (#{btitle }, #{bcontent }, #{bname })
	</insert>
	
	<delete id="boardDeleteDao">
		DELETE FROM boardtbl WHERE bnum = #{param1 }
	</delete>
	
	<!-- 모든 글의 개수 받아오기 -->
	<select id="boardCount" resultType="int">
		SELECT count(*) FROM boardtbl
	</select>
	
	<select id="contentView" resultType="com.mycompany.mybatistest.dto.BoardDto">
		SELECT * FROM boardtbl WHERE bnum = #{param1 }
	</select>	
	
	<update id="contentModify">
		UPDATE boardtbl SET btitle = #{param1 }, bcontent = #{param2 }, bname = #{param3 } WHERE bnum = #{param4 }
	</update>

</mapper>    